{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": "./",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "strict": false,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.d.ts"]
}
