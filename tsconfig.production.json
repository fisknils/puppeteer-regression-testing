{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.d.ts"
    ],
}
